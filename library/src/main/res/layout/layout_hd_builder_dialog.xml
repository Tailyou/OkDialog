<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dialog_out_padding"
    android:paddingRight="@dimen/dialog_out_padding">

    <LinearLayout
        android:id="@+id/rootPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/default_builder_dialog_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_title_bar_height">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/dialog_title_icon_size"
                    android:layout_height="@dimen/dialog_title_icon_size"
                    android:layout_marginLeft="@dimen/dialog_title_icon_m_l"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@null" />

                <TextView
                    android:id="@+id/alertTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dialog_title_text_size"/>
            </RelativeLayout>

            <View
                android:id="@+id/titleDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:id="@+id/alertMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:minHeight="@dimen/dialog_msg_min_height"
            android:paddingLeft="@dimen/dialog_msg_p_h"
            android:paddingRight="@dimen/dialog_msg_p_h"
            android:textColor="@color/blackLight"
            android:textSize="@dimen/dialog_msg_text_size"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/customPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dialog_btn_m_h"
            android:layout_marginStart="@dimen/dialog_btn_m_h">

            <Button
                android:id="@+id/dialog_btn_n"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialog_btn_height"
                android:layout_margin="@dimen/dialog_btn_m_h"
                android:layout_weight="1"
                android:background="@drawable/default_builder_dialog_btn_bg"
                android:gravity="center"
                android:textSize="@dimen/dialog_btn_text_size"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/dialog_btn_p"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialog_btn_height"
                android:layout_margin="@dimen/dialog_btn_m_h"
                android:layout_weight="1"
                android:background="@drawable/default_builder_dialog_btn_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_btn_text_size"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>